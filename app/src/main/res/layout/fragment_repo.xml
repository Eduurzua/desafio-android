<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="8dp"
    android:id="@+id/layout_repo"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tv_repo_name"
        android:layout_width="151dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:hint="tv_repo_name"
        android:lines="@integer/material_motion_duration_long_1"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_star"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:hint="tv_star"
        android:lines="@integer/material_motion_duration_long_1"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toEndOf="@+id/tv_forks"
        app:layout_constraintTop_toBottomOf="@+id/tv_repo_description"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_forks"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:hint="tv_fork"
        android:lines="@integer/material_motion_duration_long_1"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/tv_repo_description"
        android:layout_width="173dp"
        android:layout_height="31dp"
        android:clickable="true"
        android:lines="@integer/material_motion_duration_long_1"
        android:text="tv_repo_description"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_repo_name"
        app:layout_constraintVertical_bias="0.25" />

    <ImageView
        android:id="@+id/iv_avatar_user"
        android:layout_width="58dp"
        android:layout_height="54dp"
        android:layout_marginStart="268dp"
        android:clickable="true"
        android:lines="@integer/material_motion_duration_long_1"
        android:textColor="@color/teal_200"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214" />

    <TextView
        android:id="@+id/tv_owner_name"
        android:layout_width="173dp"
        android:layout_height="31dp"
        android:clickable="true"
        android:lines="@integer/material_motion_duration_long_1"
        android:textColor="@color/teal_200"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar_user"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>